<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="112dp" android:padding="16dp">

    <TextView
        android:text="Release date"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_release_date"
        android:layout_below="@+id/movie_title"
        android:layout_toRightOf="@+id/movie_poster"
        android:layout_toEndOf="@+id/movie_poster"
        android:layout_marginTop="13dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movie_rating"
        style="@android:style/Widget.Holo.RatingBar.Small"
        android:layout_alignBottom="@+id/movie_poster"
        android:layout_toRightOf="@+id/movie_poster"
        android:layout_toEndOf="@+id/movie_poster" />

    <TextView
        android:text="Title"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:id="@+id/movie_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/movie_poster"
        android:layout_toEndOf="@+id/movie_poster" />

    <ImageView
        android:layout_width="54dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/movie"
        android:id="@+id/movie_poster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" android:layout_marginEnd="16dp" android:layout_marginRight="16dp" />

</RelativeLayout>